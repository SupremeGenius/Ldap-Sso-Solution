@model LdapSso.Web.Models.UserLoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<html>
<head>
    <title>Login</title>
</head>
<h3>@ViewBag.Message</h3>
<body>
    @using (@Html.BeginForm("Index", "Account", FormMethod.Post))
    {
        
            <div style="width: 50%; padding-left: 2%">
                <div class="form-group">
                    @Html.LabelFor(a=>a.UserName);
                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" } );
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Password);
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control" });
                </div>

                <button type="submit" class="btn btn-success">Login</button>                

            </div>
        
    }
</body>
</html>
